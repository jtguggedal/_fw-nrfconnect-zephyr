menuconfig BH1749
	bool "BH1749 Sensor"
	depends on I2C && HAS_DTS_I2C && HAS_DTS_GPIO && SENSOR
	help
	  Enable driver for BH1749 sensors.

if BH1749

config CONFIG_BH1749_TRIGGER
	bool "Trigger for BH1749"

choice
	prompt "Trigger mode"
	default BH1749_TRIGGER_NONE
	help
	  Specify the type of triggering used by the driver.

config BH1749_TRIGGER_NONE
	bool "No trigger"

config BH1749_TRIGGER_GLOBAL_THREAD
	bool "Use system workqueue"
	depends on GPIO
	select BH1749_TRIGGER

endchoice

config BH1749_TRIGGER
	bool

endif # BH1749
